{
  "name": "@cluster/server",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:cleanup": "tsx scripts/cleanup-annotations.ts",
    "db:reset": "tsx scripts/reset-database.ts"
  },
  "dependencies": {
    "@azure/identity": "^4.0.1",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@cluster/core": "workspace:*",
    "@cluster/w3c": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.3",
    "express": "^4.18.2",
    "postgres": "^3.4.3",
    "uuid": "^13.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.8",
    "@types/uuid": "^11.0.0",
    "drizzle-kit": "^0.20.10",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
